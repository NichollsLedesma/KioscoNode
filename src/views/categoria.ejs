<% include header %>
<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <form action="/api/categoria" method="post" id="formAddCategory">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" placeholder="Nombre de la categoria...">
                </div>
                <button type="submit" class="btn btn-default btnAddCategory">Agregar</button>
            </form>
        </div>
        <div class="col-6">
            <% if(categorias.length===0){ %>
                <p>No hay categorias</p>
            <% }else{ %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categorias.forEach(cat=>{ %>
                            <tr>
                                <td><%= cat.id %></td>
                                <td><%= cat.nombre %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
        
    </div> <!-- cierre row -->
</div>    
</body>
</html>